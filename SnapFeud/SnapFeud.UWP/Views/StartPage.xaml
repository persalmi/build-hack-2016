<Page
    x:Class="SnapFeud.UWP.Views.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:SnapFeud.UWP.ViewModels"
    mc:Ignorable="d"
    DataContext="{Binding StartViewModel, Source={StaticResource ViewModelLocator}}"
    d:DataContext="{d:DesignInstance Type=vm:StartViewModel, IsDesignTimeCreatable=True}"
    Background="Green">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="48" HorizontalAlignment="Center" Text="{Binding Title}"/>
        <Button Grid.Row="2" Content="DEBUG" HorizontalAlignment="Center" Command="{Binding DebugCommand}"/>
    </Grid>
</Page>
