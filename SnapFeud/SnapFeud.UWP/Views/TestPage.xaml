<Page
    x:Class="SnapFeud.UWP.Views.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="button" Content="Take Photo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="join" Content="Join" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="join_Click"/>
        <Image x:Name="imageControl" Width="200" Height="200" Tapped="imageControl_Tapped"/>
        <TextBlock x:Name="resultText" Text="" />
    </StackPanel>
</Page>
